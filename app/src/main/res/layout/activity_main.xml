<?xml version="1.0" encoding="utf-8"?>

<!-- HAPPY NEW YEAR CARD -->
<!-- By : ChocolateCharlie -->
<!-- Last Updated : 01 - 01 - 2018 -->

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.happynewyear.MainActivity">

<!-- Background image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/winterlandscape"
        android:contentDescription="Nature landscape in winter : dawn on a lake on foreground, forest in the background"/>

<!-- Center "Happy New Year !" -->
    <TextView
        android:text="Happy New Year !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="72sp" />

<!-- Bottom Right "From ChocolateCharlie" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="cursive"
        android:padding="16dp"
        android:text="From ChocolateCharlie"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="16sp" />

</RelativeLayout>
